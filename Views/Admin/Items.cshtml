@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using Application.Models
@model List<Application.Models.Item>

<div>

    <h2 class="text-center">Items</h2>

    @foreach (var i in Model)
{
    <div class="row" style="width:70%; margin-left:15%; margin-top:5%;opacity:0.9">
        <div class="col-lg-4">
            <img src="~/Content/themes/base/images/@(i.Id).jpg" style="margin-left: 3%; width: 300px; height: 200px" />
        </div>
        <div class="col-lg-6">
            <h4 style="margin-left:6%">@(i.Name)</h4>
            <p style="margin-left:6%">
                <strong>Price: </strong>@(i.Price)<br>
                <strong>Type: </strong>@(i.Type)<br>
                <strong>Description: </strong>@(i.Description)
            <p>
        </div>
        <div class="text-center col-md-2" style="margin-top:5%">
            <a title="Update" href="/Item/EditItem?id=@(i.Id)" class="btn btn-success btn-default"><span class="glyphicon glyphicon-refresh"></span></a>
            <a title="Remove" href="#" data-toggle="modal" data-target="#itemDelete-@(i.Id)" class="btn btn-danger btn-default"><span class="glyphicon glyphicon-remove"></span></a>
        </div>
    </div>

    <div class="modal fade" id="itemDelete-@(i.Id)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width:30%">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Confirmation</h4>
                </div>
                <div class="modal-body">
                    Are you sure that you want to delete this item?
                </div>
                <div class="modal-footer">
                    <a class="btn btn-success" href="~/Item/RemoveItem?id=@(i.Id)">Yes</a>
                    <a class="btn btn-danger" data-dismiss="modal">No</a>
                </div>
            </div>
        </div>
    </div>

    }
    <br><br><br>

</div>

<a class="btn btn-primary btn-lg" style="margin-left:50%" href="~/Item/AddItem">Add Item</a>
